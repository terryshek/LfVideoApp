<!DOCTYPE html>
<html ng-app="member">
<head lang="en">
    <meta charset="UTF-8">
    <title><%= title %></title>
    <% include lib %>
    <% include css %>
</head>
<body>
<div class="container" ng-controller="loginCtrl">

    <div class="col-sm-6 col-sm-offset-3">

        <h1><span class="fa fa-sign-in"></span> Login</h1>

        <div class="alert alert-danger" role="alert" ng-show="warning" id="warning">{{warning}}</div>

        <!-- LOGIN FORM -->
        <form ng-submit="submitAccount()" novalidate autocomplete="off">
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" name="form.username" ng-model="form.username">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="form.password" ng-model="form.password">
            </div>

            <button type="submit" class="btn btn-warning btn-lg" ladda="loading">Login</button>
        </form>
    </div>
</div>
</body>
</html>
