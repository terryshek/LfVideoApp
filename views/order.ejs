<% include main/header %>
<div class="container" ng-controller="orderCtrl">
    <!--<div class="row col-md-6 col-md-offset-2 custyle">-->
    <table class="table table-striped custab">
        <thead>
        <h1 class="pull-left">Client Query</h1>
        <!--<a href="#" class="btn btn-primary btn-xs pull-right"><b>+</b> Add new categories</a>-->
        <tr>
            <th>Index</th>
            <th>Title</th>
            <th>Created date</th>
            <th>Status</th>
            <th style="text-align: center">Action</th>
        </tr>
        </thead>
        <tr ng-repeat="item in filteredList" ng-class="{warning:!item.ans_status, default:item.ans_status}">
            <td>{{$index+1}}</td>
            <td>{{item.title}}</td>
            <td>{{item.created_at}}</td>
            <td>{{status(item.ans_status)}}</td>
            <td class="text-center">
                <a class='btn btn-info btn-xs' ng-click="queryBox(item)"><span class="glyphicon glyphicon-edit">Detail</span></a>
                <a class="btn btn-danger btn-xs" ng-hide="!role" ng-click="deleteQuery(item)"><span class="glyphicon glyphicon-trash">Delete</span></a>
            <td>
        </tr>
    </table>
    <pagination total-items="totalItems" items-per-page="itemsPerPage"
                ng-model="currentPage" ng-change="pageChanged()"></pagination>
    <!--</div>-->
</div>

<% include main/footer.ejs %>
