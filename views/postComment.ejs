<% include main/header.ejs %>
<div class="container" ng-controller="commentCtrl" style="display: block" id="adminTpl" >
    <!--<div class="container">-->
    <div class="col-xs-2 col-sm-2 col-md-2">
        <button class="btn btn-primary navbar-btn" ladda="loading" data-spinner-size="30" ng-click="open()">New User
        </button>
    </div>
    <div class="col-xs-8 col-sm-8 col-md-8 pull-right">
        <button class="btn btn-info navbar-btn pull-right" ng-click="refresh()"><span class="glyphicon glyphicon-refresh"></span> Refresh</button>
    </div>

    <!--<div class="well">-->
    <table class="table table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Post Person</th>
            <th></th>
            <th>Post Title</th>
            <th>Type</th>
            <th style="width: 36px;"></th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="post in posts" my-post-repeat-directive>
            <td>{{$index+1}}</td>
            <td><img src="{{post.profile.imageUrl}}" class="img-circle" style=" cursor: pointer; height:50px; width:50px; "></td>
            <td>{{post.profile.username}}</td>
            <td>
                <a ng-click="open(post.data)" title="Place comment on it">{{post.data.title | limitTo: 100}}{{ post.data.title.length > 10 ? '&hellip;' : '' }}</a>
            </td>
            <td>
                {{postTyle}}
            </td>
            <td>
                <!-- Indicates a dangerous or potentially negative action -->
                <button class="btn btn-xs btn-danger" type="button" ng-click="deleteList(member)"><i
                            class="glyphicon glyphicon-trash" style="padding: 0 3px"></i>Delete
                </button>
            </td>
        </tr>
        </tbody>
    </table>

    <pagination total-items="totalItems" items-per-page="itemsPerPage"
                ng-model="currentPage" ng-change="pageChanged()"></pagination>
</div>
<% include main/footer.ejs %>
